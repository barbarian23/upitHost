<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
        <item name="android:colorPrimary">#FF5722</item>
        <item name="android:colorPrimaryDark">#E64A19</item>
        <item name="android:colorAccent">#00BCD4</item>
        <item name="android:datePickerDialogTheme">@style/DialogDatePicker.Theme</item>
        <item name="android:timePickerDialogTheme">@style/DialogTimePicker.Theme</item>
    </style>

    <style name="DialogTimePicker.Theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="colorAccent">#FF5722</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorDarkGrey</item>
        <item name="android:colorControlActivated">#FF5722</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarPositiveButtonStyle</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DialogDatePicker.Theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="colorAccent">#FF5722</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#d4d4d4</item>
        <item name="android:textColorSecondary">@color/colorLightGrey</item>
        <item name="android:colorControlActivated">#FF5722</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarPositiveButtonStyle</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DatePickerTheme.ButtonBarPositiveButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/background_app_accent_button</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:fontFamily">@font/opensans</item>
    </style>

</resources>
